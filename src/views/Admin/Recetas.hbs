<div class="container">
    <center>
        <br>
        <h1>
            <font size="9" face="Georgia, Arial" color="#990000">R</font><font color="white">ecetas</font>
        </h1>
        <div class="alert alert-light">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#comida" role="tab" aria-controls="home" aria-selected="true">Comidas</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#bebida" role="tab" aria-controls="profile" aria-selected="false">Bebidas</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#postre" role="tab" aria-controls="contact" aria-selected="false">Postres</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
    <!-- Comidas -->
  <div class="tab-pane fade show active" id="comida" role="tabpanel" aria-labelledby="home-tab">
      
     <div class="row">

            {{#each comidas}}
            <div class="col-lg-4 col-md-4 col-12">
                <div class="card-deck">
                    <div class="card">
                <img src="/imagenes/{{img}}" class="card-img-top" height="270">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">{{descripcion}}</p>
                </div>
                <div class="card-footer">
                    
                    <button type="button" class="btn btn-outline-dark">Modificar</button>
                    <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </div>
            </div>
                </div>
                <br>
            </div>

            {{/each}}

        </div>

    </div>
<!-- bebida -->

  <div class="tab-pane fade" id="bebida" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row">

            {{#each bebidas}}
            <div class="col-lg-4 col-md-4 col-12">
                <div class="card-deck">
                    <div class="card">
                <img src="/imagenes/{{img}}" class="card-img-top" height="270">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">{{descripcion}}</p>
                </div>
                <div class="card-footer">
                    
                    <button type="button" class="btn btn-outline-dark">Modificar</button>
                    <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </div>
            </div>
                </div>
                <br>
            </div>

            {{/each}}

        </div>

  </div>


  <!-- postres -->
  <div class="tab-pane fade" id="postre" role="tabpanel" aria-labelledby="contact-tab">
        <div class="row">

            {{#each postres}}
            <div class="col-lg-4 col-md-4 col-12">
                <div class="card-deck">
                    <div class="card">
                <img src="/imagenes/{{img}}" class="card-img-top" height="270">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">{{descripcion}}</p>
                </div>
                <div class="card-footer">
                    
                    <button type="button" class="btn btn-outline-dark">Modificar</button>
                    <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </div>
            </div>
                </div>
                <br>
            </div>

            {{/each}}

        </div>  
    
  </div>
</div>
        </div>
    </center>
</div>