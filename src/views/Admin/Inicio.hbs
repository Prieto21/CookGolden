
<div class="container-fluid">
    <center>
        <h1>
            <font size="10" face="Georgia, Arial" color="#990000">B</font><font color="white">ienvenido</font>
        </h1>
        <div class="alert ">
            <table>
                <tr>
                    <!-- PERFIL DEL ADMIN-->
                    <td>
                        <center>
                            <h1>
                                
              {{#each nameperfil}}

              <font size="9" face="Georgia" color="white">{{nombre}}</font>
          
              {{/each}}

                            </h1>
                            {{#each useradmin}}
                            <div class="alert alert-light" style="width: 35rem;" role="alert">
                                <img src="/imagenes/{{img}}">
                                <hr>
                                <h4 style="color: black;">Nombre & Apellido </h4>
                                <p>
                                    <font style="color: black;" face="Georgia" size="4"> {{nombre}} {{apellido}}</font>
                                </p>
                                <h4 style="color: black;">Usuario </h4>
                                <p>
                                    <font style="color: black;" face="Georgia" size="4"> {{usuario}} </font>
                                </p>
                                <h4 style="color: black;">Contraseña </h4>
                                <p>
                                    <font style="color: black;" face="Georgia" size="4"> {{contra}} </font>
                                </p>
                                <h4 style="color: black;">Rol </h4>
                                <p>
                                    <font style="color: black;" face="Georgia" size="4"> {{rol}} </font>
                                </p>
                                <button type="button" class="btn btn-outline-dark">Modificar</button>
                            </div>
                            {{/each}}
                        </center>
                    </td>
                    <!-- PERFIL DE LOS USUARIOS-->
                    <td>
                        <center>
                            <h1>
                                <font size="9" face="Georgia, Arial" color="#990000">U</font><font color="white">suarios</font>
                            </h1>

                            <div class="overflow-auto" style="height: 36rem; width: 66rem;">

                                <div class="container">
                                    <div class="row">
                                        
                                            {{#each users}}
                                            <div class="col-lg-4 col-md-4 col-12">
                                            <div class="card-deck">
                                                <div class="card">

                                                    <img src="/imagenes/{{img}}" class="card-img-top" height="330">
                                                    <hr>
                                                    <div class="card-body">
                                                        <h4 style="color: black;">Nombre & Apellido </h4>
                                                        <p>
                                                            <font style="color: black;" face="Georgia" size="4"> 
                                                                {{nombre}} {{apellido}}
                                                            </font>
                                                        </p>
                                                        <h4 style="color: black;">Usuario </h4>
                                                        <p>
                                                            <font style="color: black;" face="Georgia" size="4"> {{usuario}}
                                                            </font>
                                                        </p>
                                                        <h4 style="color: black;">Contraseña </h4>
                                                        <p>
                                                            <font style="color: black;" face="Georgia" size="4">
                                                                {{contra}}
                                                            </font>
                                                        </p>
                                                    </div>
                                                    <div class="card-footer">
                                                        <button type="button"
                                                            class="btn btn-outline-dark">Modificar</button>
                                                        <button type="button"
                                                            class="btn btn-outline-danger">Eliminar</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <br>
                                            </div>
                                            
                                            {{/each}}
                                        
                                    </div>
                                    

                                    
                                </div>
                            </div>

                    </td>
                </tr>
            </table>
        </div>
    </center>
</div>