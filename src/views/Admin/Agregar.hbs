<div class="container">
    <center>
        <br>
        <h1>
            <font size="9" face="Georgia, Arial" color="#990000">A</font><font color="white">gregar</font>
        </h1>
        <div class="alert ">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#recetas" role="tab"
                        aria-controls="home" aria-selected="true">Recetas</a>
                </li>

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="recetas" role="tabpanel" aria-labelledby="home-tab">
                    <br>
                    <div class="alert" style="width: 35rem;">

                        <form action="/CookGolden/nuevarecet" method="POST">
                            <div class="form-group">
                                <label for="exampleInputEmail1" style="color: white;">NOMBRE</label>
                                <input type="text" class="form-control" name="nombre"
                                    placeholder="Ingrese Nombre De La Receta" required>

                            </div>
                            

                            <div class="form-group">
                                <label for="exampleInputEmail1" style="color: white;">CLASIFICACIÓN</label>
                                <select class="form-control" name="id_clasif">
                                    {{#each clasificacion}}
                                    <option value="{{id_clasif}}">{{clasificacion}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleInputEmail1" style="color: white;">DESCRIPCIÓN</label>
                                <textarea class="form-control" placeholder="Ingrese Descripcion" required rows="3"
                                    name="descripcion"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1" style="color: white;">IMAGEN</label>
                                <input type="file" class="form-control-file" name="img" required>
                            </div>

                            <button type="submit" class="btn btn-outline-warning btn-block">
                                <font style="color: white;">Agregar</font>
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </center>
</div>